{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "typeRoots": ["src/index.d.ts"]
  },
  "include": ["src"],
}
